function cluster-bot-trace-update
  while true
    if test -e DONE
      return
    end
    set -f NOW (date -Iseconds)
    echo "Got trace on $NOW"
    mkdir $NOW
    oc get clusterversion version -o yaml > $NOW/cv.yaml
    oc get clusteroperators -o yaml > $NOW/co.yaml
    sleep 10
  end
end


